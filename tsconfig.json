{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [ "ES2022" ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": [ "*" ],
      "@/abstract/*": [ "abstract/*" ],
      "@/collection/*": [ "collection/*" ],
      "@/core/*": [ "core/*" ],
      "@/types/*": [ "types/*" ],
      "@/utils/*": [ "utils/*" ]
    }
  }
}
